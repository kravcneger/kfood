<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#order-data" role="tab" data-toggle="tab">Данные</a></li>
  <li><a href="#products-data" role="tab" data-toggle="tab">Список продуктов</a></li>
</ul>

<form class="form-horizontal">
  <div class="container-fluid" style="padding-top:10px;">
    <div class="tab-content">
      <div class="tab-pane active" id="order-data">
        <div class="form-group">
          <%= label_tag(:order_name, 'Имя клиента', class: 'control-label col-xs-4 col-md-4 required')%>
          <div class="col-xs-8 col-md-8">
            <%= text_field_tag(:order_name, '', class: 'form-control input-sm')%>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag(:order_contact_phone, 'Контактный телефон', class: 'control-label col-xs-4 col-md-4 required')%>
          <div class="col-xs-8 col-md-8">
            <%= text_field_tag(:order_contact_phone, '', class: 'form-control input-sm')%>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag(:order_street, 'улица', class: 'control-label col-xs-4 col-md-4 required')%>
          <div class="col-xs-8 col-md-8">
            <%= text_field_tag(:order_street, '', class: 'form-control input-sm')%>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag(:house, 'Дом', class: 'control-label col-xs-4 col-md-4 required')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:house, '', class: 'form-control input-sm')%>
          </div>
          <%= label_tag(:building, 'Корпус/строение', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:building, '', class: 'form-control input-sm')%>
          </div>      
        </div>

        <div class="form-group">
          <%= label_tag(:apartment, 'Квартира/офис', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:apartment, '', class: 'form-control input-sm')%>
          </div>
          <%= label_tag(:entrance, 'Подъезд', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:entrance, '', class: 'form-control input-sm')%>
          </div>      
        </div>

        <div class="form-group">
          <%= label_tag(:floor, 'Этаж', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:floor, '', class: 'form-control input-sm')%>
          </div>
          <%= label_tag(:access_code, 'Код домофона', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:access_code, '', class: 'form-control input-sm')%>
          </div>      
        </div>

        <div class="form-group">
          <%= label_tag(:renting, 'Нужна сдача с', class: 'control-label col-xs-4 col-md-4')%>
          <div class="col-xs-2 col-md-2">
            <%= text_field_tag(:renting, '', class: 'form-control input-sm')%>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="products-data">
        <div class="form-group">
          <div class="col-xs-6 col-md-6 col-xs-offset-3 col-md-offset-3">
            <input type="text" class="form-control" placeholder="Добавить продукт">
          </div>
          <div class="col-xs-11 col-md-11 col-xs-offset-1 col-md-offset-1" id="order_products">
          </div>
          <%= hidden_field_tag(:free_shipping, @organization.free_shipping)%>
          <%= hidden_field_tag(:delivery, @organization.delivery)%>
        </div>              
      </div>
    </div>
  </div>
</form>

<div class="modal-footer ">
  <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
</div>